<apex:page controller="ReAdmissionController" showHeader="false" standardStylesheets="false" docType="html-5.0">
        <style>
                label {
                    font-family: sans-serif;
                    color:#{!appControl.Text_Color__c};
                    font-weight:400;
                    font-size:18px;
                }
                /* adding to fix wrapping for small screens - Luke Vang */
                @media only screen and (max-width: 410px){
                    label{
                        display: inline;
                    }
                }
                .formControl {
                    font-family: sans-serif;
                    color:#{!appControl.Text_Color__c};
                    font-weight:400;
                    font-size:14px;
                    height:36px;
                }
                .required{
                    color:#c23934;
                }
                .required-label:after {
                    color: #c23934;
                    content: " *";
                }
                .statePicklist select {
                            font-family: 'Open Sans', sans-serif;
                            color:#0;
                            font-weight: 400;
                            font-size: 14px;
                            display: block;
                            width: 100%;
                            height: 34px;
                            padding: 6px 12px;
                            line-height: 1.42857143;
                            background-color: #fff;
                            background-image: none;
                            border: 1px solid #ccc;
                            border-radius: 4px;
                            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
                            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
                            -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
                            transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
                }
                .selectRadio label {
                    margin-left:10px;
                    font-weight:400;
                    display:inline;
                }
                .selectRadio td {
                    padding-left:10px;
                    padding-bottom:10px;
                }
                .dateFormat {
                    visibility:hidden;
                    font-size: 0px;
                }
                .selectCheckboxes label {
                    margin-left:10px;
                    font-weight:400;
                }
                .navbar__pages {
                    display:none;
                }
        </style>
    <c:ApplicationHead />
    <c:ApplicationBody title="Re-enrollment Application" subtitle="" appControl="{!appControl}">
        <apex:outputPanel id="readmissionForm">
        <apex:outputPanel layout="none" rendered="{!IF(createdCase == null, true, false)}">
        <apex:form id="theForm" >
            <apex:outputPanel id="formPageMessages">
                <apex:pageMessages />
            </apex:outputPanel>

            <div class="row" >
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-xs-12" >
                    <h2 style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:24px;" ></h2>
                    <div class="row" >
                        <div class="col-lg-10 col-lg-offset-1" >
                            <div class="row" >
                                <div class="col-xs-12">
                                    <p>
                                        Note: This form must be completed in one session. Please do not attempt to complete this re-enrollment application until you are prepared to provide all required fields and attach all required documentation.
                                    </p>
                                </div>
                            </div>
                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group" >
                                        <label for="school" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >To which school are you applying for readmission? <span class='required'>*</span></label>
                                        <apex:actionRegion > 
                                        <apex:selectList id="school" value="{!request.school}" size="1" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOption itemValue="" itemLabel="--None--"/>
                                            <apex:selectOption itemValue="Adult Undergraduate" itemLabel="College of Adult & Professional Studies"/>
                                            <apex:selectOption itemValue="Graduate" itemLabel="Graduate"/>
                                            <apex:selectOption itemValue="Seminary" itemLabel="Seminary"/>
                                            <apex:actionSupport event="onchange" rerender="essayQuestions, declarationSection, programQuestions" action="{!changeSchool}" />
                                        </apex:selectList>
                                        </apex:actionRegion>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    

            <div class="row" >
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-xs-12" >
                    <h2 style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:24px;" >APPLICANT DATA</h2>
                    <div class="row" >
                        <div class="col-lg-10 col-lg-offset-1" >
                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label for="firstName" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >First Name <span class='required'>*</span></label>
                                        <apex:inputField id="firstName" value="{!request.theContact.FirstName}" html-placeholder="" html-maxlength="255" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>
                                    <div class="form-group">
                                        <label for="middleName" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Middle Name</label>
                                        <apex:inputField id="middleName" value="{!request.theContact.MiddleName}" html-placeholder="" html-maxlength="255" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>
                                    <div class="form-group">
                                        <label for="lastName" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Last Name <span class='required'>*</span></label>
                                        <apex:inputField id="lastName" value="{!request.theContact.LastName}" html-placeholder="" html-maxlength="255" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>
                                </div>
                            </div>

                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label for="bethelId" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Bethel ID# <span class='required'>*</span></label>
                                        <apex:inputField id="bethelId" value="{!request.theContact.Banner_Id__c}" html-placeholder="" html-maxlength="255" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>

                                    <div class="form-group" >
                                        <label for="hasOtherName" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Are you or have you ever been known by any other name?</label>
                                        <apex:actionRegion > 
                                        <apex:selectRadio id="hasOtherName" value="{!request.hasOtherName}" layout="pageDirection" styleClass="selectRadio" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOption itemValue="Yes" itemLabel="Yes"/>
                                            <apex:selectOption itemValue="No" itemLabel="No"/>
                                            <apex:actionSupport event="onchange" rerender="otherNameQuestion" />
                                        </apex:selectRadio>
                                        </apex:actionRegion>
                                    </div>

                                    <apex:outputPanel id="otherNameQuestion">
                                    <apex:outputPanel layout="none" rendered="{!IF(request.hasOtherName = 'Yes', true, false)}" >
                                    <div class="form-group">
                                        <label for="otherName" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Other Name</label>
                                        <apex:inputText id="otherName" value="{!request.otherName}" maxlength="255" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>
                                    </apex:outputPanel>
                                    </apex:outputPanel>
                                </div>
                            </div>

                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group" >
                                        <label for="street" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Street <span class='required'>*</span></label>
                                        <apex:inputField id="street" value="{!request.theContact.MailingStreet}" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;resize:none;"/>
                                    </div>

                                    <div class="form-group" >
                                        <label for="city" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >City <span class='required'>*</span></label>
                                        <apex:inputField id="city" value="{!request.theContact.MailingCity}" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;"/>
                                    </div>
                        
                                    <div class="form-group" >
                                        <label for="state" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >State/Province <span class='required'>*</span></label>
                                        <apex:inputField id="state" value="{!request.theContact.MailingStateCode}" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;" />
                                    </div>
                        
                                    <div class="form-group" >
                                        <label for="country" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Country <span class='required'>*</span></label>
                                        <apex:inputField id="country" value="{!request.theContact.MailingCountryCode}" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;"/>
                                    </div>

                                    <div class="form-group" >
                                        <label for="postal" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Postal Code <span class='required'>*</span></label>
                                        <apex:inputField id="postal" value="{!request.theContact.MailingPostalCode}" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;"/>
                                    </div>
                                </div>
                            </div>

                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label for="email" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Email Address <span class='required'>*</span></label>
                                        <apex:inputField id="email" value="{!request.theContact.Email}" html-placeholder="name@example.com" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>
                                </div>
                            </div>

                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label for="homePhone" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Home Phone</label>
                                        <apex:inputField id="homePhone" value="{!request.theContact.HomePhone}" html-placeholder="(123) 456-7890" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>
                                    <div class="form-group">
                                        <label for="mobilePhone" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Mobile Phone</label>
                                        <apex:inputField id="mobilePhone" value="{!request.theContact.MobilePhone}" html-placeholder="(123) 456-7890" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>
                                    <div class="form-group">
                                        <label for="workPhone" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Work Phone</label>
                                        <apex:inputField id="workPhone" value="{!request.theContact.hed__WorkPhone__c}" html-placeholder="(123) 456-7890" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>
                                </div>
                            </div>

                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group" >
                                        <label for="citizen" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >U.S. Citizenship</label>
                                        <apex:actionRegion > 
                                        <apex:selectList id="citizen" value="{!request.theContact.Citizenship__c}" size="1" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOption itemValue="" itemLabel="--None--"/>
                                            <apex:selectOption itemValue="Citizen" itemLabel="Citizen"/>
                                            <apex:selectOption itemValue="Permanent Resident Alien" itemLabel="Permanent Resident Alien"/>
                                            <apex:selectOption itemValue="Not Citizen or Permanent Resident" itemLabel="Not Citizen or Permanent Resident"/>
                                            <apex:actionSupport event="onchange" rerender="citizenQuestions" />
                                        </apex:selectList>
                                        </apex:actionRegion> 
                                    </div>
                                </div>
                            </div>

                            <apex:outputPanel id="citizenQuestions">
                            <div class="row" >
                                <div class="col-xs-12">
                                    <apex:outputPanel layout="none" rendered="{!IF(request.theContact.Citizenship__c = 'Citizen', true, false)}">
                                    <div class="form-group" >
                                        <label for="ssn" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Social Security Number</label>
                                        <apex:inputSecret redisplay="true" id="ssn" value="{!request.theContact.hed__Social_Security_Number__c}" html-placeholder="XXX-XX-XXXX" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#676767;font-weight:400;font-size:14px;height:36px;"/>
                                    </div>
                                    </apex:outputPanel>

                                    <apex:outputPanel layout="none" rendered="{!IF(request.theContact.Citizenship__c = 'Not Citizen or Permanent Resident', true, false)}">
                                    <div class="form-group" >
                                        <label for="visa" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Intended Visa Status?</label>
                                        <apex:selectList id="visa" value="{!request.theContact.Visa_Type_Code__c}" size="1" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOption itemValue="" itemLabel="--None--"/>
                                            <apex:selectOption itemValue="AS - Asylum granted" itemLabel="AS - Asylum granted"/>
                                            <apex:selectOption itemValue="B2 - Tourist" itemLabel="B2 - Tourist"/>
                                            <apex:selectOption itemValue="F1 - Student" itemLabel="F1 - Student"/>
                                            <apex:selectOption itemValue="H1 - Special employee" itemLabel="H1 - Special employee"/>
                                            <apex:selectOption itemValue="H4 - Spouse of employee" itemLabel="H4 - Spouse of employee"/>
                                            <apex:selectOption itemValue="J1 - Exchange scholar" itemLabel="J1 - Exchange scholar"/>
                                            <apex:selectOption itemValue="J2 - Dependent of exchange scholar" itemLabel="J2 - Dependent of exchange scholar"/>
                                            <apex:selectOption itemValue="TP - Temporary protection status" itemLabel="TP - Temporary protection status"/>
                                        </apex:selectList>
                                    </div>
                                    </apex:outputPanel>

                                    <apex:outputPanel layout="none" rendered="{!IF(request.theContact.Citizenship__c = 'Permanent Resident Alien', true, false)}">
                                    <div class="form-group">
                                        <label for="alienNumber" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Alien Registration Number</label>
                                        <apex:inputField id="alienNumber" value="{!request.theContact.Alien_Registration_Number__c}" html-placeholder="" html-maxlength="255" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>
            
                                    <div class="form-group" >
                                        <label for="alienDate" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Alien Registration Number Date</label>
                                        <apex:inputField id="alienDate" type="auto" value="{!request.theContact.Alien_Registration_Number_Date__c}" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" />
                                    </div>
                                    </apex:outputPanel>
                                </div>
                            </div>
                            </apex:outputPanel>
    
                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group" >
                                        <label for="veteran" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Are you a veteran?</label>
                                        <apex:selectRadio id="veteran" value="{!request.theContact.Is_Veteran__c}" layout="pageDirection" styleClass="selectRadio" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOption itemValue="Yes" itemLabel="Yes"/>
                                            <apex:selectOption itemValue="No" itemLabel="No"/>
                                        </apex:selectRadio>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" >
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-xs-12" >
                    <h2 style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:24px;" >ENROLLMENT DATA</h2>
                    <div class="row" >
                        <div class="col-lg-10 col-lg-offset-1" >
                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group" >
                                        <label for="gender" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Gender</label>
                                        <apex:selectList id="gender" value="{!request.theContact.hed__Gender__c}" size="1" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOption itemValue="" itemLabel="--None--"/>
                                            <apex:selectOption itemValue="Male" itemLabel="Male"/>
                                            <apex:selectOption itemValue="Female" itemLabel="Female"/>
                                        </apex:selectList>
                                    </div>
                                    <div class="form-group" >
                                        <label for="hispanic" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Do you consider yourself to be Hispanic or Latino?</label>
                                        <apex:selectRadio id="hispanic" value="{!request.theContact.Is_Hispanic__c}" layout="pageDirection" styleClass="selectRadio" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOption itemValue="Yes" itemLabel="Yes"/>
                                            <apex:selectOption itemValue="No" itemLabel="No"/>
                                        </apex:selectRadio>
                                        <p class="help-block">
                                            <apex:outputText value="Defined as a person of Cuban, Mexican, Puerto Rican, South or Central American, or other Spanish culture or origin, regardless of race." escape="false" />
                                        </p>
                                    </div>
                                    <div class="form-group" >
                                        <label for="racial" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Select one or more of the racial categories to describe yourself.</label>
                                        <apex:selectCheckboxes id="racial" value="{!request.race}" layout="pageDirection" styleClass="selectCheckboxes" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;" >
                                            <apex:selectOption itemValue="American Indian or Alaskan Native" itemLabel="American Indian or Alaskan Native"/>
                                            <apex:selectOption itemValue="Asian" itemLabel="Asian"/>
                                            <apex:selectOption itemValue="Black or African American" itemLabel="Black or African American"/>
                                            <apex:selectOption itemValue="Native Hawaiian or Other Pacific Islander" itemLabel="Native Hawaiian or Other Pacific Islander"/>
                                            <apex:selectOption itemValue="White" itemLabel="White"/>
                                        </apex:selectCheckboxes>
                                        <p class="help-block">
                                            <apex:outputText value="The U.S. Department of Education requires colleges and universities to collect the racial/ethnic background information from all students. This data is not used in making decisions concerning admission to Bethel University." escape="false" />
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <apex:outputPanel id="programQuestions">
                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label for="program" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >For which program or major are you seeking readmission? <span class='required'>*</span></label>
                                        <apex:selectList id="program" value="{!request.program}" size="1" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOptions value="{!programOptions}"/>    
                                        </apex:selectList>
                                    </div>
                                    <div class="form-group">
                                        <label for="term" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >When would you like to begin?  <span class='required'>*</span></label>
                                        <apex:selectList id="term" value="{!request.term}" size="1" styleClass="form-control" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOptions value="{!termOptions}"/>    
                                        </apex:selectList>
                                    </div>
                                </div>
                            </div>
                            </apex:outputPanel>

                            <div class="row" >
                                <div class="col-xs-12">
                                    <div class="form-group" >
                                        <label for="aid" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Will you apply for financial aid?</label>
                                        <apex:selectRadio id="aid" value="{!request.financialAid}" layout="pageDirection" styleClass="selectRadio" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOption itemValue="Yes" itemLabel="Yes"/>
                                            <apex:selectOption itemValue="No" itemLabel="No"/>
                                        </apex:selectRadio>
                                    </div>

                                    <div class="form-group" >
                                        <label for="hasBusinessOffice" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:18px;" >Do you have a business office or collections hold? </label>
                                        <apex:selectRadio id="hasBusinessOffice" value="{!request.hasBusinessOffice}" layout="pageDirection" styleClass="selectRadio" style="font-family:'Open Sans', sans-serif;color:#{!appControl.Text_Color__c};font-weight:400;font-size:14px;height:36px;" >
                                            <apex:selectOption itemValue="Yes" itemLabel="Yes"/>
